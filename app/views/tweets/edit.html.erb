<div class="contents row">
  <div class="jumbotron bg-light mx-auto">
    <%= form_with model: @tweet, method: :patch,local: true do |f| %>
      <div class="form-group">
        <h3 class="text-primary">
          編集する
        </h3>
      </div>
      <div class="form-group">
        <%= f.text_field :image,placeholder: "Image URL", type:"text", name:"image", size: "20x5",autofocus: "true" %>
      </div>
      <div class="form-group">
        <%= f.text_area :text,placeholder: "text",name: "text", size: "20x5",style: {cols: 30, rows: 10} %>
      </div>
      <%= f.submit "送信", class: 'text-light btn btn-primary btn-lg' %>
    <% end %>
  </div>
</div>